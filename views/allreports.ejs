<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Reports - Hazard Reporter</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #1e1e2f, #2c3e50);
      min-height: 100vh;
      font-family: 'Segoe UI', sans-serif;
      color: #fff;
    }

    .container {
      max-width: 1200px;
    }

    .page-header {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(15px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 30px;
      text-align: center;
    }

    .page-title {
      font-weight: 700;
      font-size: 2.5rem;
      background: linear-gradient(to right, #00c6ff, #0072ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 10px;
    }

    .report-card {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(15px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 15px;
      padding: 25px;
      margin-bottom: 25px;
      transition: all 0.3s ease;
      box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
    }

    .report-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 40px 0 rgba(31, 38, 135, 0.5);
    }

    .report-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 20px;
      flex-wrap: wrap;
    }

    .report-title {
      color: #00c6ff;
      font-size: 1.4rem;
      font-weight: 600;
      margin-bottom: 5px;
    }

    .report-meta {
      color: #ccc;
      font-size: 0.9rem;
    }

    .category-badge {
      background: linear-gradient(45deg, #667eea, #764ba2);
      color: white;
      padding: 5px 15px;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 500;
    }

    .source-badge {
      padding: 3px 10px;
      border-radius: 15px;
      font-size: 0.75rem;
      font-weight: 500;
      margin-left: 10px;
    }

    .source-chatbot {
      background: #4CAF50;
      color: white;
    }

    .source-manual {
      background: #2196F3;
      color: white;
    }

    .report-content {
      display: flex;
      gap: 20px;
      margin-bottom: 20px;
      flex-wrap: wrap;
    }

    .report-image {
      flex: 0 0 200px;
      height: 150px;
      border-radius: 10px;
      object-fit: cover;
      border: 2px solid rgba(255, 255, 255, 0.1);
    }

    .report-details {
      flex: 1;
      min-width: 250px;
    }

    .report-description {
      color: #ddd;
      line-height: 1.6;
      margin-bottom: 15px;
    }

    .report-location {
      color: #00c6ff;
      margin-bottom: 10px;
    }

    .report-location i {
      margin-right: 8px;
    }

    .report-actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 15px;
      padding-top: 20px;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .voting-section {
      display: flex;
      gap: 15px;
      align-items: center;
    }

    .vote-btn {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: white;
      padding: 8px 15px;
      border-radius: 25px;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 5px;
    }

    .vote-btn:hover {
      background: rgba(255, 255, 255, 0.2);
      transform: scale(1.05);
    }

    .vote-btn.true:hover {
      background: #4CAF50;
    }

    .vote-btn.false:hover {
      background: #f44336;
    }

    .action-buttons {
      display: flex;
      gap: 10px;
    }

    .action-btn {
      padding: 8px 15px;
      border: none;
      border-radius: 20px;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 5px;
      font-size: 0.85rem;
    }

    .view-btn {
      background: #2196F3;
      color: white;
    }

    .view-btn:hover {
      background: #1976D2;
      color: white;
    }

    .comment-btn {
      background: #FF9800;
      color: white;
    }

    .comment-btn:hover {
      background: #F57C00;
      color: white;
    }

    .no-reports {
      text-align: center;
      padding: 60px 20px;
      color: #ccc;
    }

    .no-reports i {
      font-size: 4rem;
      margin-bottom: 20px;
      color: #666;
    }

    .success-message {
      background: #4CAF50;
      color: white;
      padding: 15px 20px;
      border-radius: 10px;
      margin-bottom: 20px;
      text-align: center;
      animation: slideInDown 0.5s ease-out;
    }

    .error-message {
      background: #f44336;
      color: white;
      padding: 15px 20px;
      border-radius: 10px;
      margin-bottom: 20px;
      text-align: center;
      animation: slideInDown 0.5s ease-out;
    }

    @keyframes slideInDown {
      from {
        transform: translateY(-100%);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    .stats-section {
      display: flex;
      justify-content: space-around;
      margin-bottom: 30px;
      flex-wrap: wrap;
      gap: 15px;
    }

    .stat-card {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(15px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 10px;
      padding: 20px;
      text-align: center;
      flex: 1;
      min-width: 150px;
    }

    .stat-number {
      font-size: 2rem;
      font-weight: bold;
      color: #00c6ff;
    }

    .stat-label {
      color: #ccc;
      font-size: 0.9rem;
    }

    @media (max-width: 768px) {
      .report-content {
        flex-direction: column;
      }

      .report-image {
        flex: none;
        width: 100%;
        height: 200px;
      }

      .report-header {
        flex-direction: column;
        gap: 10px;
      }

      .report-actions {
        flex-direction: column;
        align-items: stretch;
      }

      .voting-section {
        justify-content: center;
      }

      .action-buttons {
        justify-content: center;
      }
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <%- include('navbar') %>

  <div class="container py-5">
    
    <!-- Page Header -->
    <div class="page-header">
      <h1 class="page-title">ðŸ“‹ All Hazard Reports</h1>
      <p class="text-light">Community-reported civic hazards and their status</p>
    </div>

    <!-- Success/Error Messages -->
    

    <!-- Statistics Section -->
    <div class="stats-section">
      <div class="stat-card">
        <div class="stat-number"><%= reports.length %></div>
        <div class="stat-label">Total Reports</div>
      </div>
      <div class="stat-card">
        <div class="stat-number"><%= reports.filter(r => r.source === 'chatbot').length %></div>
        <div class="stat-label">AI Detected</div>
      </div>
      <div class="stat-card">
        <div class="stat-number"><%= reports.reduce((sum, r) => sum + r.flag.trueVotes, 0) %></div>
        <div class="stat-label">Total Votes</div>
      </div>
      <div class="stat-card">
        <div class="stat-number"><%= Math.round((reports.filter(r => r.source === 'chatbot').length / Math.max(reports.length, 1)) * 100) %>%</div>
        <div class="stat-label">AI Accuracy</div>
      </div>
    </div>

    <!-- Reports Section -->
    <% if (reports && reports.length > 0) { %>
      <% reports.forEach(function(report) { %>
        <div class="report-card">
          
          <!-- Report Header -->
          <div class="report-header">
            <div>
              <h3 class="report-title"><%= report.title %></h3>
              <div class="report-meta">
                <i class="fas fa-user me-1"></i>
                Reported by: <%= report.reporter.fullname %>
                <span class="ms-3">
                  <i class="fas fa-clock me-1"></i>
                  <%= new Date(report.createdAt).toLocaleDateString() %> at <%= new Date(report.createdAt).toLocaleTimeString() %>
                </span>
              </div>
            </div>
            <div>
              <span class="category-badge"><%= report.catagory %></span>
              <span class="source-badge source-<%= report.source %>">
                <% if (report.source === 'chatbot') { %>
                  ðŸ¤– AI Detected
                <% } else { %>
                  ðŸ‘¤ Manual
                <% } %>
              </span>
            </div>
          </div>

          <!-- Report Content -->
          <div class="report-content">
  <!-- FIXED: Updated image display code -->
  <% if (report.image) { %>
    <img src="/uploads/<%= report.image %>" alt="Hazard Image" class="report-image" style="max-width: 200px; height: 150px; object-fit: cover;">
  <% } %>
            
            <div class="report-details">
    <div class="report-description">
      <%= report.description %>
    </div>


     <!-- Status Badge -->
<% if (report.status) { %>
  <span class="badge 
    <% if (report.status === 'Reported') { %> bg-secondary 
    <% } else if (report.status === 'Acknowledged') { %> bg-info 
    <% } else if (report.status === 'In Progress') { %> bg-warning 
    <% } else if (report.status === 'Resolved') { %> bg-success 
    <% } else if (report.status === 'Rejected') { %> bg-danger 
    <% } %> mb-2">
    <i class="fas fa-flag"></i> <%= report.status %>
  </span>
<% } %>

    
    <div class="report-location">
      <i class="fas fa-map-marker-alt"></i>
      <%= report.location %>
    </div>
    
    <% if (report.mapLink) { %>
      <div class="report-location">
        <i class="fas fa-external-link-alt"></i>
        <a href="<%= report.mapLink %>" target="_blank" style="color: #00c6ff; text-decoration: none;">
          View on Google Maps
        </a>
      </div>
    <% } %>
  </div>
</div>

          <!-- Report Actions -->
          <div class="report-actions">
            <div class="voting-section">
              <span style="color: #ccc; margin-right: 10px;">Is this a valid hazard?</span>
              <button class="vote-btn true" onclick="vote('<%= report._id %>', 'true')">
                <i class="fas fa-thumbs-up"></i>
                True (<span id="true-<%= report._id %>"><%= report.flag.trueVotes %></span>)
              </button>
              <button class="vote-btn false" onclick="vote('<%= report._id %>', 'false')">
                <i class="fas fa-thumbs-down"></i>
                False (<span id="false-<%= report._id %>"><%= report.flag.falseVotes %></span>)
              </button>
            </div>
            
            <div class="action-buttons">
              <% if (report.mapLink) { %>
                <a href="<%= report.mapLink %>" target="_blank" class="action-btn view-btn">
                  <i class="fas fa-map"></i>
                  View Location
                </a>
              <% } %>
              <a href="/hazard/<%= report._id %>/comments" class="action-btn comment-btn">
                <i class="fas fa-comments"></i>
                Comments
              </a>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="no-reports">
        <i class="fas fa-clipboard-list"></i>
        <h3>No Reports Yet</h3>
        <p>Be the first to report a hazard in your community!</p>
        <a href="/report" class="btn btn-primary mt-3">
          <i class="fas fa-plus me-2"></i>
          Report a Hazard
        </a>
      </div>
    <% } %>

  </div>

  <!-- Footer -->
  <footer class="text-center py-4" style="color: #ccc;">
    Â© 2025 Hazard Reporter â€” Built for the people, by the people.
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    // Voting functionality
    async function vote(reportId, voteType) {
      try {
        const response = await fetch(`/hazard/${reportId}/vote/${voteType}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        
        const data = await response.json();
        
        if (data.success) {
          // Update vote counts
          document.getElementById(`true-${reportId}`).textContent = data.trueVotes;
          document.getElementById(`false-${reportId}`).textContent = data.falseVotes;
          
          // Show feedback
          showNotification(`Vote recorded! Thank you for your feedback.`, 'success');
        } else {
          showNotification('Error recording vote. Please try again.', 'error');
        }
      } catch (error) {
        console.error('Voting error:', error);
        showNotification('Error recording vote. Please try again.', 'error');
      }
    }

    // Notification system
    function showNotification(message, type = 'success') {
      const notification = document.createElement('div');
      notification.className = `${type}-message`;
      notification.style.cssText = `
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 9999;
        padding: 15px 20px;
        border-radius: 10px;
        color: white;
        animation: slideInRight 0.5s ease-out;
        background: ${type === 'success' ? '#4CAF50' : '#f44336'};
      `;
      notification.innerHTML = `
        <div style="display: flex; align-items: center; gap: 10px;">
          <i class="fas fa-${type === 'success' ? 'check' : 'exclamation-triangle'}"></i>
          <span>${message}</span>
          <button onclick="this.parentElement.parentElement.remove()" style="background: none; border: none; color: white; font-size: 18px; cursor: pointer; margin-left: 10px;">&times;</button>
        </div>
      `;
      document.body.appendChild(notification);
      
      // Auto-remove after 5 seconds
      setTimeout(() => {
        if (notification.parentElement) {
          notification.remove();
        }
      }, 5000);
    }

    // Check for URL parameters and show messages
    document.addEventListener('DOMContentLoaded', function() {
      const urlParams = new URLSearchParams(window.location.search);
      
      if (urlParams.get('success') === 'true') {
        showNotification('Report submitted successfully! Thank you for helping make our community safer.', 'success');
      }
      
      if (urlParams.get('error')) {
        showNotification('There was an error processing your request. Please try again.', 'error');
      }
      
      // Clean URL after showing messages
      if (urlParams.get('success') || urlParams.get('error')) {
        const cleanUrl = window.location.pathname;
        window.history.replaceState({}, document.title, cleanUrl);
      }
    });

    // Add CSS animation for slideInRight
    const style = document.createElement('style');
    style.textContent = `
      @keyframes slideInRight {
        from {
          transform: translateX(100%);
          opacity: 0;
        }
        to {
          transform: translateX(0);
          opacity: 1;
        }
      }
    `;
    document.head.appendChild(style);
  </script>

</body>
</html>
